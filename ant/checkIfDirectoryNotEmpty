<!-- source: http://theoreticaltechstuff.blogspot.de/2010/10/ant-example-check-if-directory-is-empty.html -->
            <if>
                 <length length="0" when="greater">
                       <fileset dir="yourDirectory" followsymlinks="false"/>
                 </length>
                 <then>
                      <!-- Dir Not Empty -->
                 </then>
                 <else>
                      <!-- Dir Empty -->
                 </else>
            </if>
